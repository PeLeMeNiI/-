text = '"Ура!", - вопите, дети, повару!'
def convert(w):
    #stop = ['"','!','.',',','.',' ']
    alf = 'ёйцукенгшщзхъэждлорпавыфячсмитьбю'
    phrase = ''
    for i in w.lower():
        if i in alf:
            phrase += i
            
    return(phrase)
#print(convert('"Ура!", - вопите, дети, повару!'))
def palindrome(s):
    if len(s) <= 1:
        return True
    else:
        return s[0] == s[-1] and palindrome(s[1:-1])

print(palindrome(convert('лидер бредил')))
